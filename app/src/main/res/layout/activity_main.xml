<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/getRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Request"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"/>

    <Button
        android:id="@+id/postRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Post Request"
        android:layout_below="@id/getRequestButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/putRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Put Request"
        android:layout_below="@id/postRequestButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/deleteRequestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Request"
        android:layout_below="@id/putRequestButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />


    <TextView
        android:id="@+id/responseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/deleteRequestButton"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

</RelativeLayout>